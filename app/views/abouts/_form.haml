.container-fluid
  = form_for about, url: about_path, html: {multipart: true} do |f|
    .form-group
      = f.label :content, class: "form-label"
      = f.label :Content_is_processed_using_markdown, { class: 'form-label pull-right text-muted small' }
      ~ f.text_area :content, { class: 'form-control news-content', rows: 15 }
    = f.submit class: 'btn btn-success'
