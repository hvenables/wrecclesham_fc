- if @fixtures.nil?
  Please Add fixtures
- else
  %ul
    - @fixtures.each do |fixture|
      %li
        = "#{fixture.date} - #{fixture.home.name} #{fixture.home_score} - #{fixture.away_score} #{fixture.away.name}"

- if can? :manage, Fixture
  = link_to "Add Fixtures", league_table_fixtures_path(), method: :post
