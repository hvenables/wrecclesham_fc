= form_for @news do |f|
  .form-group
    = f.label :title
    = f.text_field :title, { class: "form-control" }
  .form-group
    = f.label :summary
    = f.label :Content_is_processed_using_markdown, { class: 'pull-right text-muted small' }
    = f.text_area :summary, { class: 'form-control', rows: 5 }
  .form-group
    = f.label :content
    = f.label :Content_is_processed_using_markdown, { class: 'pull-right text-muted small' }
    = f.text_area :content, { class: 'form-control', rows: 15 }
  = f.submit class: 'btn btn-success'
