= form_for @news, html: {multipart: true} do |f|
  .form-group
    = f.label :title, class: "form-label"
    = f.text_field :title, { class: "form-control" }
  .form-group
    = f.label :summary_max_length_250_characters, class: "form-label"
    = f.label :Content_is_processed_using_markdown, { class: 'pull-xs-right form-label text-muted small' }
    = f.text_area :summary, { class: 'form-control news-summary', rows: 5 }
  .form-group
    = f.label :content, class: "form-label"
    = f.label :Content_is_processed_using_markdown, { class: 'form-label pull-xs-right text-muted small' }
    = f.text_area :content, { class: 'form-control news-content', rows: 15 }
  .form-group
    = f.label :Add_an_image, class: "form-label"
    = f.file_field :image, { class: ' form-control btn btn-default btn-file' }
  = f.submit class: 'btn btn-success'
