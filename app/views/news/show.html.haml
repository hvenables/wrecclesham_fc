.container.col-xs-12.col-lg-8
  .row
    .card
      .card-block
        %h4.card-title
          = @news.title
      %img.img-fluid.m-x-auto.d-block{:alt => "", :src => "#{@news.image.url(:large)}"}/
      .card-block
        %p.card-text
          = preserve gfm(@news.content)
        %p.card-text
          %small.text-muted
            = "Last updated #{time_ago_in_words(@news.updated_at)} ago"
          - if can? :manage, News
            = link_to 'Delete', news_path(@news), method: :delete, class: 'pull-xs-right btn btn-sm btn-danger'
            = link_to 'Edit', edit_news_path(@news), class: 'pull-xs-right btn btn-sm btn-success edit-button'
.container.col-xs-12.col-lg-4
  %h4.form-label
    Latest News
.container.col-xs-12.col-md-8.offset-md-2.offset-lg-0.col-lg-4
  - @latest_news.each do |news|
    = link_to news_path(news), class: 'video-link' do
      .card.green-hover
        %img.card-img-top.img-fluid.m-x-auto.d-block{:alt => "", :src => "#{news.image.url(:large)}"}/
        .card-block
          %h4.card-title
            = news.title
          %p.card-text
            = news.summary
          %p.card-text
            %small.text-muted.bottom-align-text
              = news.created_at.to_formatted_s(:month_and_year)

