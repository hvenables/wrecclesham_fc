.container-fluid
  = form_for @video do |f|
    .form-group
      = f.label :title, class: "form-label"
      = f.text_field :title, { class: "form-control" }
    .formm-group
      = f.label :content, class: "form-label"
      = f.text_area :content, { class: 'form-control, news-content', rows: 5 }
    .form-group
      = f.label :url, class: "form-label"
      .input-group.mb-3
        .input-group-prepend
          %span.input-group-text https://www.youtube.com/embed/2iOQ053s_oM
        = f.text_field :url, {id: 'basic-url', class: 'form-control', 'aria-describedby': "basic-addon3", type: "text"}
    = f.submit class: 'btn btn-success'
