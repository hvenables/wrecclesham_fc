- if @league_tables.blank?
  No League Tables have yet been added.
- else
  %table.table
    %thead
      %tr
        %th
          Year
        %th
          Name
        %th.text-center
          First Team
        %th
          Reserve Team
    %tbody
      - @league_tables.each do |league_table|
        %tr
          %td
            = league_table.year
          %td
            = link_to "#{league_table.name}", league_table_path(league_table)
          %td
            = radio_button_tag :active_first_team_table, league_table.active_first_team_table, league_table.active_first_team_table, id: "first_team_table-#{league_table.id}", class: 'active_first_team_table'
          %td
            = radio_button_tag :active_reserve_team_table, league_table.active_reserve_team_table, league_table.active_reserve_team_table, id: "reserve_team_table-#{league_table.id}", class: 'active_reserve_team_table'

= link_to "Add a league", new_league_table_path(), class: 'btn btn-primary'
