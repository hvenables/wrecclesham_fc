- if @league_tables.nil?
  Please Add a table
- else
  %table.table
    %thead
      %tr
        %th
          Year
        %th
          Name
        %th
          First Team
        %th
          Reserve Team
    %tbody
      - @league_tables.each do |league_table|
        %tr
          %td
            = league_table.year
          %td
            = link_to "#{league_table.name}", league_table_path(league_table)
          %td
            = league_table.active_first_team_table
          %td
            = league_table.active_reserve_team_table

= link_to "Add a league", new_league_table_path(), class: 'btn btn-primary'
