!!!
%html
  %head
    %title Wrecclesham FC
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    %meta{name: "theme-color", content: "#82b582 "}
    %meta{name: "apple-mobile-web-app-status-bar-style", content: "#82b582 "}
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css", :integrity => "sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj", :rel => "stylesheet"}/
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/tether/1.3.1/js/tether.min.js"}
    %script{:src => "https://use.fontawesome.com/16383b8e2f.js"}
    %script{:crossorigin => "anonymous", :integrity => "sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU", :src => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js"}
    %link{:href => "https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css", :rel => "stylesheet"}/
    %script{:src => "https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"}
    = favicon_link_tag 'favicon.ico'
    = render 'google_analytics'
  %body
    #wrap
      = render 'layouts/topbar'
      = render 'layouts/navbar'
      .container
        - flash.each do |key, value|
          .alert.flash-title{ :class => bootstrap_class_for(key) }
            %button.close{ :data => { :dismiss => "alert" } } x
            = value
      .container.center-panel
        = yield
    = render 'layouts/footer'
