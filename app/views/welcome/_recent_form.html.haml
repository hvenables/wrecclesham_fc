.card-body
  - if team.current_season.present?
    .card-text
      .goals.mb-3
        .text-xs-left#goals_for
          %small
            = "#{team.current_season&.goals_for} Goals scored"
        .progress
          .progress-bar.bg-success{ style: "width: #{goals_for_progress_bar(team)}%;"  }
        .text-xs-left#goals_against
          %small
            = "#{team.current_season&.goals_against} Goals conceded"
        .progress
          .progress-bar.bg-danger{ style: "width: #{goals_against_progress_bar(team)}%;"  }
      .row
        .col-4
          %small
            Current Position
          %h2
            = "#{team.current_season&.position&.ordinalize}"
          %small
            Games Played
          %h2
            = "#{team.current_season&.games}"
        .col-8
          = doughnut_chart charts_recent_form_path(team_id: team.id)
