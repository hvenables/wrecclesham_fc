.container-fluid
  .row
    .container.col-lg-12.c-wrapper
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "3", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "4", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "5", "data-target" => "#carousel-example-generic"}
        .carousel-inner{:role => "listbox"}
          .carousel-item.active
            %img.col-xs-4.img-slide{:alt => "First slide", "src" => "#{@news[0].image.url(:medium)}"}/
            %img.col-xs-4.img-slide{:alt => "Second slide", "src" => "#{@news[1].image.url(:medium)}"}/
            %img.col-xs-4.img-slide{:alt => "Third slide", "src" => "#{@news[2].image.url(:medium)}"}/
          .carousel-item
            %img.col-xs-4.img-slide{:alt => "Fourth slide", "src" => "#{@news[3].image.url(:medium)}"}/
            %img.col-xs-4.img-slide{:alt => "Fifth slide", "src" => "#{@news[4].image.url(:medium)}"}/
            %img.col-xs-4.img-slide{:alt => "Sixth slide", "src" => "#{@news[5].image.url(:medium)}"}/
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
          %span.icon-prev{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
          %span.icon-next{"aria-hidden" => "true"}
          %span.sr-only Next
    .container.col-md-12.col-lg-8
      .container
        %h4.news-heading.title
          Latest News
      - if @news
        .row
          - @news.each do |news|
            = link_to news_path(news), class: 'welcome-link' do
              .card.col-xs-12.green-hover.welcome-news
                .col-xs-4.image-container
                  %img.card-img-top.img-fluid.welcome-image{:alt => "Card image cap", "src" => "#{news.image.url(:large)}"}/
                .col-xs-8
                  %h4.card-title.news-title
                    = news.title
                  %p.card-text
                    = preserve gfm(news.summary)
    .container.col-lg-4.col-md-12.pull-lg-right
      .container
        %h4.newsheading.title
          League Tables
      .container.welcome-tables
        - if @first_team_table
          %h6
            = @first_team_table.name + " - " + @years
          %table.table.small-table
            %thead.thead-inverse
              %tr
                %th.small
                  Pos
                %th.small
                  Team
                %th.small
                  Played
                %th.small
                  Difference
                %th.small
                  Points
            %tbody
              - @first_team_teams.each do |team|
                %tr
                  %td{ class: 'small', scope: 'row' }
                    = team.position
                  %td.small
                    = team.team.name
                  %td.small
                    = team.games
                  %td.small
                    = team.goals_difference
                  %td.small
                    = team.points
          = link_to 'See full table', league_table_path(@first_team_table), {class: 'small pull-xs-right'}
        - else
          Add teams to the league
      .container.welcome-tables

