                  %td.small
                    = team.team.name
                  %td.small
                    = team.games
                  %td.small
                    = team.goals_difference
                  %td.small
                    = team.points
          = link_to 'See full table', league_table_path(@first_team_table), {class: 'small pull-xs-right'}
        - else
          Add teams to the league
