- if @carousel_articles
  .container.col-lg-12.c-wrapper
    #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
      .carousel-inner{:role => "listbox"}
        .carousel-item.active
          .card.col-xs-12.green-hover.welcome-news
            .col-xs-4.image-container
              %img.welcome-image.card-img-top.img-fluid.m-x-auto{:alt => "First slide", "src" => "#{@news[0].image.url(:medium)}"}/
            .col-xs-8
              %h4.card-title.news-title
                = @news[0].title
              %p.card-text
                = preserve gfm(@news[0].summary)
        .carousel-item
          .card.col-xs-12.green-hover.welcome-news
            .col-xs-4.image-container
              %img.welcome-image.card-img-top.img-fluid.m-x-auto{:alt => "First slide", "src" => "#{@news[1].image.url(:medium)}"}/
            .col-xs-8
              %h4.card-title.news-title
                = @news[1].title
              %p.card-text
                = preserve gfm(@news[1].summary)
        .carousel-item
          .card.col-xs-12.green-hover.welcome-news
            .col-xs-4.image-container
              %img.welcome-image.card-img-top.img-fluid.m-x-auto{:alt => "First slide", "src" => "#{@news[2].image.url(:medium)}"}/
            .col-xs-8
              %h4.card-title.news-title
                = @news[2].title
              %p.card-text
                = preserve gfm(@news[2].summary)
      %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
        %span.icon-prev{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
        %span.icon-next{"aria-hidden" => "true"}
        %span.sr-only Next
